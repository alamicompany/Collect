<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
    android:id="@+id/displayPostPic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:src="@drawable/projectimage"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"



        />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayPostPic"
            >

        <Button
            android:id="@+id/displayInfo"
            android:layout_width="20sp"
            android:layout_height="25sp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@drawable/ic_info_"
            android:layout_marginStart="10dp"

            />

        <Button
            android:id="@+id/display_post_favorit"
            android:layout_width="20sp"
            android:layout_height="25sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="?attr/colorPrimary"
            android:layout_toEndOf="@+id/displayInfo"
            android:layout_marginStart="5dp"
        />

        <Button
            android:id="@+id/display_post_share"
            android:layout_width="20sp"
            android:layout_height="25sp"
            android:layout_marginEnd="10dp"
            android:textColor="?attr/colorPrimary"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_share_black"/>

        </RelativeLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>
