    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@drawable/background_search_bar</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFF</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">#f40820</item>
    </style>
    <style name="login_button">
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
    </style>
    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000</item>
        <item name="android:background">#FFFF</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyle</item>
    </style>
    <style name="WindowTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
